.side-bar
  .user-name
    .top-items
      .top-items__top-name
        = current_user.name
      .top-items__top-icons
        = link_to new_group_path do
          = icon( 'fas', 'edit')
        %span<>
        = link_to edit_user_path(current_user) do
          = icon( 'fas', 'cog')

  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message


