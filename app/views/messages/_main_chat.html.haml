.main-chat
  .group-info
    .chat
      .chat__chat-name
        = @group.name
      .chat__chat-member
        Member:
        - @group.users.each do |user|
          = user.name
    .edit-btn
      = link_to edit_group_path(@group), class:"edit" do
        Edit

  .message-list
    = render @messages
  
  .message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .form
        .form-input
          = f.text_field :content, class: "text", placeholder: "type a message"
          = f.label :image do
            = icon("far", "image fa-lg" )
            = f.file_field :image, class: "icon-file"

        = f.submit "Send", class:"submit"